<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="183dp"
        android:layout_marginRight="183dp"
        android:text="MVP "
        android:textSize="25sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailediteTextID"
        android:hint="Email"
        android:layout_marginStart="20dp"
        android:inputType="textEmailAddress"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordediteTextID"
        android:hint="Password"
        android:layout_marginStart="20dp"
        android:layout_below="@id/emailediteTextID"
        android:layout_marginEnd="20dp"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Login"
        android:layout_below="@id/passwordediteTextID"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnLoginID"/>






</RelativeLayout>